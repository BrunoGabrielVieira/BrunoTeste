@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@using (Html.BeginForm("LoginSubmit", "Login", FormMethod.Post))
{
    <div class="box" style="max-width: min-content; margin: auto;">
        <div class="divisao">
            <div class="header">Login de Usuário</div>
            <div class="field">
                <label for="username">Username</label>
                <input maxlength="50" type="text" id="username" name="Username"> 
            </div>
            <div class="field">
                <label for="senha">Senha</label>
                <input maxlength="50" type="password" id="senha" name="Senha">
            </div>
            <button type="submit" style="margin-top: 16px;">Login</button>
        </div>
        <a href="@Url.Action("Index", "Usuario")">Cadastrar</a>
    </div>
}